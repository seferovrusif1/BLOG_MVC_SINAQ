@model SliderUpdateVM
<div class="card-body">
	<form method="post">

		<div class="form-group">
			<label asp-for="Description">Description</label>
			<input type="text" class="form-control" value="@Model.Description" name="Description" id="Description" placeholder="Description">
		</div>
		<div class="form-group">
			<label asp-for="Rate">Rate</label>
			<input type="number" class="form-control" value="@Model.Rate" name="Rate" id="Rate" placeholder="Rate">
		</div>
		<button class="btn btn-success">Submit</button>

	</form>
</div>