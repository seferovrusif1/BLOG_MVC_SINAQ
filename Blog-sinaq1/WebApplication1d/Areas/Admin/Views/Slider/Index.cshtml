@model List<SliderListItemVM>
<div>
    <a class="btn" asp-action="Create" asp-controller="Slider" >Create</a> 
</div>
<table class="table table-dark" id="data-Table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Desription</th>
            <th>Rate</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(SliderListItemVM item in Model)
        {
            
        <tr>
                <th>@item.Id</th>
                <th>@item.Description</th>
                <th>@item.Rate</th>
                <th><a asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a></th>
                <th><a asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">Delete</a></th>
        </tr>
        }
   
    </tbody>
</table>